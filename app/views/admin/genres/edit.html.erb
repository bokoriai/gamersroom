<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <%= form_with model:@genre, url: admin_genre_path, method: :patch, local: true do |f| %>
                <h2 class="heading">ジャンル名編集</h2>
                    <%= f.label :name, "ジャンル名" %>
                    <%= f.text_field :name %>
                    <%= f.submit "編集する", class: 'btn btn-sm btn-success' %>
            <% end %>
    </div>
</div>