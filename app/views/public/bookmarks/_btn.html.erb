<% if review.bookmarked_by?(current_user) %>
    <%= link_to public_review_bookmarks_path(review), method: :delete, remote: :true do %>
        <i class="fa-solid fa-bookmark"></i><%= review.bookmarks.count %> 
    <% end %>
<% else %>
    <%= link_to public_review_bookmarks_path(review), method: :post, remote: :true do %>
        <i class="fa-regular fa-bookmark"></i><%= review.bookmarks.count %> 
    <% end %>
<% end %>
