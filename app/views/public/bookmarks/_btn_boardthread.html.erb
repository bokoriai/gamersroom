<% if boardthread.bookmarked_by?(current_user) %>
  <%= link_to public_boardthread_bookmarks_path(boardthread), method: :delete, remote: :true do %>
    <i class="fa-solid fa-bookmark"></i><%= boardthread.bookmarks.count %> 
  <% end %>
<% else %>
  <%= link_to public_boardthread_bookmarks_path(boardthread), method: :post, remote: :true do %>
    <i class="fa-regular fa-bookmark"></i><%= boardthread.bookmarks.count %> 
  <% end %>
<% end %>