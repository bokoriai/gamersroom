<div class="container">
    <h2 class="heading">ゲームタイトル検索</h2>
    <div class="row">
        <div class="col-lg-2">
                <% if user_signed_in? %>
                    <%= form_with url: public_gamesearches_search_path, method: :get, local: true do |f| %>
                        <%= f.text_field :content %>
                        <br>
                        <%= f.select :method, options_for_select({"完全一致" => "perfect", "部分一致" => "partial"}) %>
                        <%= f.submit "検索" %>
                    <% end %>
                <% end %>
        </div>
        
        <div class="col-lg-4 offset-lg-1">
            <p class="game_index">最近レビュー投稿があったゲームタイトル</p>
            <% if @recent_reviews.present? %>
                <% @recent_reviews.each do |recent_review| %>
                    <%= recent_review.game_title %>
                <% end %>
            <% else %>
                <p>最近のレビュー投稿はありません</p>
            <% end %>
        </div>

        <div class="col-lg-4 offset-lg-1">
            <p class="game_index">評価の高いレビューが多いゲームタイトル</p>
            <% if @top_rated_games.present? %>
                <% @top_rated_games.each do |top_rated_game| %>
                    <%= top_rated_game.game_title %>
                <% end %>
            <% else %>
                <p>評価の高いレビューはありません</p>
            <% end %>
        </div>
    </div>
</div>