<div class="container">
    <div class="row">
        <div class="col-lg-5">
            <p>ゲームタイトル検索</p>
                <% if user_signed_in? %>
                    <%= form_with url: search_path, method: :get, local: true do |f| %>
                        <%= f.text_field :content %>
                        <%= f.select :method, options_for_select({"完全一致" => "perfect", "部分一致" => "partial"}) %>
                        <%= f.submit "検索" %>
                    <% end %>
                <% end %>
        <div class="col-lg-7">
            <p>最近レビュー投稿があったゲームタイトル</p>
            <% @games.each do |game| %>
                <%= game.game_title %>
            <% end %>
        </div>    
            
        </div>
    </div>
</div>