<div class="search_form">
    <table align="center">
        <tr>
            <div class="search_form">
                <%= form_with url: public_tagsearches_search_path, method: :get, local: true do |f| %>
                <td><%= f.label :word, "スレッド検索フォーム" %></td>
                <td><%= f.text_field :word %></td>
