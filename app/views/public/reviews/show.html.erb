<p>レビュー詳細</p>

<%= @review.title %>
<br>
<%= @review.body %>
<br>

  <% if @review.favorited_by?(current_user) %>
    <p>
      <%= link_to public_review_favorites_path(@review), method: :delete do %>
        ♥<%= @review.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to public_review_favorites_path(@review), method: :post do %>
        ♡<%= @review.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
<div>
    <p>コメント件数：<%= @review.post_comments.count %></p>
    <% @review.post_comments.each do |post_comment| %>
        <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
        <%= post_comment.user.name %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% end %>
</div>

<div>
    <%= form_with model: [:public, @review, @post_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
    <% end %>
</div>