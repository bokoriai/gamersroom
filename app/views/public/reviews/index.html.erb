レビュー一覧

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <!--span class="border border-danger border-4"</span> -->
            <%= @reviews.each do |review| %>
                <%= review.title %>
                <br>
                <%= review.body %>
                <br>
                <!-- ユーザー名を表示させるコードを書く -->
                <%= @user.name %>
            <% end %>
        </div>
        
        <div class="col-lg-4">
            <%= form_with model:@review, url: public_reviews_path, method: :post, local: true do |f| %>
            <%= f.label :title, "タイトル" %>
            <br>
            <%= f.text_field :title %>
            <br>
            <%= f.label :body, "本文" %>
            <br>
            <%= f.text_area :body %>
            <br>
            <%= f.submit '新規投稿', class: 'btn btn-primary' %>
            <% end %>
        </div>
        
        <!-- 検索画面に戻るというボタンと遷移先を設定すること -->
        
    </div>
</div>
