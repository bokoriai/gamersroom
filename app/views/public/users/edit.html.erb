<div class="container">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <p class="text-center"><strong>ユーザー情報編集</strong></p>
            
            <%= form_with model: @user, url:public_users_path do |f| %>
                <label for="inputName">ユーザー名</label>
                <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名" %>
                <label for="inputProfileImage">ユーザー画像</label>
                <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
                <%= f.submit "変更を保存する", class: 'btn btn-success' %>
            <% end %>
        
            <%= link_to "退会する", public_users_unsubscribe_path, class: 'btn btn-danger' %>
        </div>
    </div>
</div>